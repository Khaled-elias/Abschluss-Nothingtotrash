<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/assets/css/style.css">
</head>

<body>
    <%- include('./partials/nav') %>
        <%#= JSON.stringify(data)%>
            <form action="/marktplatz" method="POST" class="bietForm">
                <section class="section-form">
                    <article class="anzeigenType">

                        <p>Anzeigentyp:</p>
                        <p>Titel der Anzeige:</p>
                        <p>Beschreibung:</p>
                        <p>Preis:</p>
                        <p>Bilder:</p>
                        <p>Marke:</p>
                        <p>Stüke:</p>
                        <p>Frische:</p>
                    </article>
                    <article class="article-input">
                        <h2>Ich biete:</h2>

                        <input type="text" name="titel">
                        <textarea name="Beschreibung" cols="30" rows="10"></textarea>
                        <div class="form-radio">
                            <input type="text" name="result">
                            <label for="Festprice">Festprice</label>
                            <input type="radio" name="price" value="Festprice" id="Festprice">

                            <label for="vb">VB</label>
                            <input type="radio" name="price" value="vb" id="other">
                            <label for="Verschenken">Zu Verschenken</label>
                            <input type="radio" name="price" value="zu verschenken" id="other">
                        </div>

                        <div class="center">
                            <div class="form-input">
                                <label for="file-ip-1" name="image"><img src="/assets/img/camera.png" alt=""></label>

                                <div class="preview">
                                    <img id="file-ip-1-preview">
                                </div>

                            </div>
                            <label for="file-ip-1" name="image"><img src="/assets/img/camera1.png" alt=""> Bilder
                                hinzufügen</label>
                            <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event);"
                                name="image" required>

                        </div>
                        <div class="profile-table">
                            <input type="text" name="Marke" placeholder="Farm">
                            <input type="number" name="Stücke" placeholder="Stüke">

                            <label for="New">New</label>
                            <input type="radio" name="Frische" value="New" id="other">
                            <label for="Used">Used</label>
                            <input type="radio" name="Frische" value="Used" id="other">
                        </div>


                    </article>
                </section>
                <section class="section_kath">
                    <h2>Kategorisierung</h2>
                    <div class="div-kath">
                        <p>Kategorie</p>
                        <select id="" name="kategorie">
                            <option value="Möbel">Möbel</option>
                            <option value="Klamotten">Klamotten</option>
                            <option value="Elektronik">Elektronik</option>
                            <option value="Spielzeuge">Spielzeuge</option>
                        </select>

                    </div>
                </section>
                <section class="section_ort">
                    <h2>Ort</h2>
                    <div class="div-plz">
                        <label for="">PLZ*</label>
                        <input type="text" name="PLZ" id="" placeholder="PLZ">
                        <input type="text" name="Ort" id="" placeholder="Ort">
                    </div>
                    <div class="div-strass">
                        <label for="">Straße/Nr.*</label>
                        <input type="text" name="strasse" id="">
                    </div>
                    <div class="div-strass">
                        <label for="">Name*</label>
                        <input type="text" name="Name" id="">
                    </div>
                    <div class="div-Telefonnummer">
                        <label for="">Telefonnummer*</label>
                        <input type="text" name="number" id="">
                    </div>
                </section>
                <input type="submit" value="Send">
            </form>
            <script>
                function showPreview(event) {
                    if (event.target.files.length > 0) {
                        var src = URL.createObjectURL(event.target.files[0]);
                        var preview = document.getElementById("file-ip-1-preview");
                        preview.src = src;
                        preview.style.display = "block";
                    }
                }
            </script>

            <%- include('./partials/footer') %>